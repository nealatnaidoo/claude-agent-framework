{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Task(*)",
      "Bash(*:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.env*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(rm -rf /:*)",
      "Bash(sudo rm:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev/sd*:*)",
      "Bash(dd if=*of=/dev/*:*)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/gh/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.config/gh/**)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/startup_check.py"
          }
        ]
      }
    ]
  }
}

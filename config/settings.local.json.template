{
  "permissions": {
    "defaultMode": "allowEdits",
    "allow": [
      "Task(*)",
      "Bash(*:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.env*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(rm -rf /:*)",
      "Bash(sudo rm:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev/sd*:*)",
      "Bash(dd if=*of=/dev/*:*)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/gh/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.config/gh/**)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/startup_check.py"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "back|front",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_ba_artifacts.py"
          }
        ]
      },
      {
        "matcher": "ba",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_devops_approval.py"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_phase_transition.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/manage_deploy_gate.py"
          }
        ]
      },
      {
        "matcher": "qa",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_evidence_exists.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/block_deployment.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/protect_deploy_gate.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/protect_lost_lamb.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate_yaml_output.py"
          }
        ]
      }
    ]
  }
}
